<div>
  <div>
    <h1>
      List of all favourites
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new favourite
    </h2>

    <form action="/insert_favourite" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="movie_id_box">
          Movie
        </label>

        <input type="text" id="movie_id_box" name="query_movie_id">
      </div>

      <button>
        Create favourite
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favourites.each do |a_favourite| %>
      <tr>
        <td>
          <%= a_favourite.id %>
        </td>

        <td>
          <%= a_favourite.user_id %>
        </td>

        <td>
          <%= a_favourite.movie_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_favourite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favourite.updated_at) %> ago
        </td>

        <td>
          <a href="/favourites/<%= a_favourite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
