<div>
  <div>
    <h1>
      All Predictions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new prediction
    </h2>

    <form action="/insert_prediction" method="post">
      <div>
        <label for="game_id_box">
          Game
        </label>
        <select name="query_game_id">
        <% Game.all.order(:name).each do |a_game| %>
          <option value="<%= a_game.id %>">
           <%= a_game.name %>
          </option>
        <% end %>
        </select>
      </div>

      <div>
        <label for="prediction_box">
          Prediction
        </label>

        <input type="text" id="prediction_box" name="query_prediction">
      </div>
      <button>
        Create prediction
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Prediction
        </th>

        <th>
          User
        </th>

        <th>
          Game
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_predictions.each do |a_prediction| %>
      <tr>
        <td>
          <%= a_prediction.id %>
        </td>

        <td>
          <%= a_prediction.prediction %>
        </td>

        <td>
          <%= a_prediction.user.first_name %>
        </td>

        <td>
          <%= a_prediction.game.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_prediction.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_prediction.updated_at) %> ago
        </td>

        <td>
          <a href="/predictions/<%= a_prediction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
