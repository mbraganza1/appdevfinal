<div>
  <div>
    <h1>
      List of all roles
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new role
    </h2>

    <form action="/insert_role" method="post">
      <div>
        <label for="impact_box">
          Impact
        </label>

        <input type="text" id="impact_box" name="query_impact">
      </div>

      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id">
      </div>

      <div>
        <label for="moment_id_box">
          Moment
        </label>

        <input type="text" id="moment_id_box" name="query_moment_id">
      </div>

      <button>
        Create role
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Impact
        </th>

        <th>
          Player
        </th>

        <th>
          Moment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_roles.each do |a_role| %>
      <tr>
        <td>
          <%= a_role.id %>
        </td>

        <td>
          <%= a_role.impact %>
        </td>

        <td>
          <%= a_role.player_id %>
        </td>

        <td>
          <%= a_role.moment_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_role.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_role.updated_at) %> ago
        </td>

        <td>
          <a href="/roles/<%= a_role.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
