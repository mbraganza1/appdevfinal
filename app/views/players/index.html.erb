<div>
  <div>
    <h1>
      Team Of The Tournament
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add A New Player To Your Ultimate Team!
    </h2>
  
    <form action="/insert_player" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="bio_box">
          Position
        </label>
        <select name="query_bio_id">
          <option>GK</option>
          <option>RB</option>
          <option>LB</option>
          <option>CB</option>
          <option>CM</option>
          <option>CDM</option>
          <option>CAM</option>
          <option>RW</option>
          <option>LW</option>
          <option>RM</option>
          <option>LM</option>
          <option>ST</option>
          <option>CF</option>
        </select>
      </div>
      <button>
        Add Player
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_players.each do |a_player| %>
      <tr>
        <td>
          <%= a_player.id %>
        </td>

        <td>
          <%= a_player.name %>
        </td>

        <td>
          <%= a_player.dob %>
        </td>

        <td>
          <%= a_player.bio %>
        </td>

        <td>
          <%= time_ago_in_words(a_player.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_player.updated_at) %> ago
        </td>

        <td>
          <a href="/players/<%= a_player.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
